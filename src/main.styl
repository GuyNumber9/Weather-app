c-color = hsl(240, 50%, 50%);
f-color = hsl(160, 50%, 50%);

body
    margin: 0;
    background: radial-gradient(ellipse at top left, rgba(209, 234, 255, 0.8) , transparent),
            radial-gradient(ellipse at bottom right, rgba(101, 101, 105, 0.8), transparent);


main
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100vh;

.weather-info
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    width: 300px;
    background-color: #f3f7fb;
    padding: 15px;
    border-radius: 10px;
    box-shadow: -4px -4px 8px 1px #f2f3ff, 4px 4px 8px 1px #555;

.weather-city
    align-self: start;

.weather-temperature
    font-size: 4em;

.weather-status
    font-size: 1.6em;

.unit-toggle
    font-size: 14px;
    border-radius: 1em;
    display: inline-block;
    position: relative;
    width: 4em;
    overflow: hidden;
    height: 2em;
    align-self: center;
    margin: 5px 0;
  
.unit-toggle input[type="checkbox"]
    position: relative;
    -webkit-appearance: none;
    font-size: 1em;
    outline: none;
    width: 4em;
    height: 2em;
    border: 2px solid c-color;
    border-radius: 2em;
    cursor: pointer;
    transition: border-color ease-in-out 0.5s;
    z-index: 100;
    margin: 0;

.unit-toggle input[type="checkbox"]:checked
    border-color: f-color;
  
  
.toggle-circle
    margin: 0 auto;
    box-sizing: border-box;
    background-color: transparent;
    width: 2em;
    height: 2em;
    border-width: 2px;
    border-style: solid;
    border-color: inherit;
    border-radius: 50%;
    transition: border-color ease-in-out 0.5s,
    color ease-in-out 0.5s;
    text-align: center;
    line-height: 2em;
    box-shadow: 0 0 0 2em;
  

.toggle-labels
    position: absolute;
    width: 100%;
    top: 0;
    line-height: 2em;
    display: flex;
    justify-content: space-around;
    z-index: 0;
  
.toggle-box
    display: flex;
    justify-content: space-around;
    width: 150%;
    position: absolute;
    left: -50%;
    top: 0;
    z-index: 0;
    transition: left ease-in-out 0.8s;
    color: c-color;
    border-color: c-color;
  
 input[type="checkbox"]:checked ~ .toggle-box
    left: calc(50% - 2em);
    color: f-color;
    border-color: f-color;